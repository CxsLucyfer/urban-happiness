{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2015",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "target": "ES2018"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}